@model MVC3.Models.Compromisso

<h1>Editar compromisso</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="Descricao" class="form-label">Insira a descrição do compromisso:</label>
                <input asp-for="Descricao" class="form-control"></input>
            </div>
            <div class="form-group">
                <label asp-for="DataHora" class="form-label">Selecione o dia e hora do compromisso:</label>
                <input asp-for="DataHora" class="form-control"></input>
            </div>
            <div class="form-group">
                <label asp-for="Local.Id" class="form-label">Selecione o local do compromisso:</label>
                <select class="form-control" asp-for="Local.Id" asp-items="@ViewBag.locais"></select>
            </div>
            <div class="form-group">
                <label asp-for="Contato.Id" class="form-label">Insira o contato convidado ao compromisso:</label>
                <select class="form-control" asp-for="Contato.Id" asp-items="@ViewBag.contatos"></select>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="form-label">Selecione o status do compromisso:</label>
                <select asp-for="Status" class="form-control">
                    <option value="Atendido">Atendido</option>
                    <option value="Não atendido">Não atendido</option>
                    <option value="A atender">A atender</option>
                </select>
            </div>

            <button asp-action="Edit" class="btn btn-primary mt-1">Editar</button>
        </form>
    </div>
</div>