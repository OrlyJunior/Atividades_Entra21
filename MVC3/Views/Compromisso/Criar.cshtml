@model MVC3.Models.Compromisso

<h1>Criar compromisso</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Criar">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="DataHora" class="form-label">Selecione o dia e hora do compromisso:</label>
                <input asp-for="DataHora" class="form-control"></input>
            </div>
            <div class="form-group">
                <label asp-for="LocalId" class="form-label">Insira o ID do local do compromisso:</label>
                <input asp-for="LocalId" class="form-control"></input>
            </div>
            <div class="form-group">
                <label asp-for="ContatoId" class="form-label">Insira o ID do contato convidado ao compromisso:</label>
                <input asp-for="ContatoId" class="form-control"></input>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="form-label">Selecione o status do compromisso:</label>
                <select asp-for="Status" class="form-control">
                    <option value="Atendido">Atendido</option>
                    <option value="Não atendido">Não atendido</option>
                    <option value="A atender">A atender</option>
                </select>
            </div>

            <button asp-action="Criar" class="btn btn-primary mt-1">Criar</button>
        </form>
    </div>
</div>

